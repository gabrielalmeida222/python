def titulo(texto):
    print("\n" + "="*50)
    print(texto)
    print("="*50)

titulo ("Exercicio 1: Cálculo de Área")

try:
    comprimento = float(input("Informe o comnprimento do retângulo:"))
    largura = float(input("Informe a largura do retângulo:"))
    area = comprimento * largura
    print(f"A área do retângulo é {area}")  
    
except ValueError: 

    print("Valor invalido! Tente novamente.")
     